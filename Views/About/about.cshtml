        .about-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            min-height: 90vh;
            width: 85vw;
            margin: 0 auto;
        }

         .image {
            background: url("person.jpg") center/cover no-repeat;
        }

       .content {
            background: #fff;
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
        }

         .content h2 {
            text-transform: uppercase;
            font-size: 36px;
            letter-spacing: 6px;
            opacity: 0.9;
        }

         .content h6 {
            padding-bottom: 15px;
            font-weight: 300;
            opacity: 0.7;
            width: 60%;
            text-align: center;
            margin: 0 auto;
            line-height: 1.7;
        } 

    </style>
</head>

