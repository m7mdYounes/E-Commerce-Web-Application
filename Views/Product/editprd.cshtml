@model E_Commerce.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</head>
<body>

    <style>
        .navbar {
            background-color: white !important;
            border-bottom: 1px solid black;
        }

        body {
            padding-top: 60px;
            background-color: #f8f9fa;
        }

        button {
            font-size: 16px;
            margin-top: 20px;
            width: 150px;
            margin-right: 10px;
        }

        .btn-coffee {
            background-color: #A52A2A;
            color: #FFFFFF;
        }
    </style>
    <main id="loginMain" class="register min-vh-100 d-flex align-items-center">
        <section class="container register-area w-75 p-4">
            <div class="row">
                <div class="col-sm-6 m-auto">
                    <form asp-action="editprd">
                        <div class="form-group">
                            <div class="card shadow p-4">
                                <h2 class="text-center fs-3 mb-4"><i class="fa-solid fa-edit" style="color: #000000;"></i> Edit Product </h2>
                                <div class="mb-3">
                                    <label asp-for="Name" type="text" id="productName" class="control-label"></label>
                                    <input asp-for="Name" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                              
                              
                                <div class="mb-3">
                                    <label asp-for="price" class="control-label"></label>
                                    <input asp-for="price" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="price" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="rating" class="control-label"></label>
                                    <input asp-for="rating" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="rating" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="quantity" class="control-label"></label>
                                    <input asp-for="quantity" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="quantity" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="catalogueID"></label>
                                    <select asp-for="catalogueID" asp-items="ViewBag.Cats" class="form form-control rounded-pill">
                                    </select>
                                    <span asp-validation-for="catalogueID" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-coffee px-4 me-2" />
                                    <a asp-action="Index" asp-controller="Product" class="btn btn-coffee px-4 me-2">Back to Home</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </section>
    </main>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
